&lt;table&gt;
    &lt;tr&gt;
        &lt;td&gt;变量&lt;/td&gt;
        &lt;td&gt;说明&lt;/td&gt;
    &lt;/tr&gt;
    &lt;tr&gt;
        &lt;td&gt;site.time&lt;/td&gt;
